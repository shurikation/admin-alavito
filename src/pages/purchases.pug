extends ../templates/layout
include ../components/button/button

block outlet 

	block search-area
		include ./../content/search-area/search-area

	block pagination 
		include ./../components/pagination/pagination

	table.table
		thead
			tr 
				td ID
				td Название
				td Количество
				td НМЦК
				td Действия
		tbody
			tr
				td ID
				td Название
				td Количество
				td НМЦК
				td
					button.icon-button.button--blue  
						span.icon &#9432;
					button.icon-button.button--blue 
						span.icon &#10000;
					button.icon-button.button--red
						span.icon &#10006;

	//- Purchase
	h3.purchase__title.title Закупка №1234567890
	p.purchase__subtitle.subtitle Общая информация

	block purchase 
		include ./../content/purchase/purchase

	.purchase__additional-info
	h3.title Дополнительная информация
	.purchase__additional-buttons
		+button('История закупки')(class='button--blue button--small')
		+button('Предложения')(class='button--blue button--small')
		+button('Аукцион')(class='button--blue button--small')
		+button('Договор')(class='button--blue button--small')
		+button('БС')(class='button--blue button--small')

	block card 
		include ./../content/card/card


